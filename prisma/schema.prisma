generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donor {
  id                      String     @id @default(uuid())
  donorFirstName          String
  donorMiddleName         String?
  donorLastName           String
  donorEmail              String
  donorAddressLineAddress String
  donorAddressCity        String
  donorAddressState       String
  donorAddressCountry     Country    @default(CA)
  donorAddressPostalCode  String
  stripeCustomerIds       String[]
  donations               Donation[]
}

model Donation {
  id            String   @id @default(uuid())

  // Donation details
  status         DonationStatus @default(PROCESSING) // keep this
  date           DateTime @default(now())
  adheringLabels String[] // not sure if we're removing this

  // This seems important enough to keep but not sure
  allocatedToCauses   Int
  unallocatedToCauses Int
  // { v2Causes: { name: string, amount: Int, region: DonationRegion }[] }
  allocationBreakdown Json


  amountDonatedInCents Int
  amountChargedInCents Int

  feesChargedInCents   Int
  feesDonatedInCents   Int

  // Donor details TODO: remove once the auth is removed
  donorId                 String?
  donor                   Donor?  @relation(fields: [donorId], references: [id])

  // Stripe identifiers
  stripeCustomerId      String?

  stripeTransferId      String? // not sure how these fit in
  stripeChargeId        String? // not sure how these fit in

  version               Float?

  causes Cause[] @relation("DonationCauses")
}

model Cause {
  id                    String         @id @default(uuid())
  donation_id           String         @unique
  donation              Donation       @relation("DonationCauses", fields: [donation_id], references: [id])
  region                DonationRegion?
  amountDonatedCents    Int
  inHonorOf             String?
  cause                 String
  subCause              String?
}

enum DonationStatus {
  PROCESSING
  DELIVERED_TO_PARTNERS
  PARTIALLY_DISTRIBUTED
  FULLY_DISTRIBUTED
}

