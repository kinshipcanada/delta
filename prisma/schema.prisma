generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model donor {
  id                         String     @id @default(uuid())
  donor_first_name           String
  donor_middle_name          String?
  donor_last_name            String
  donor_email                String
  donor_address_line_address String
  donor_address_city         String
  donor_address_state        String
  donor_address_country      Country    @default(CA)
  donor_address_postal_code  String
  stripe_customer_ids        String[]
}

model cause {
  id           String       @id @db.VarChar
  donation_id  String       @db.VarChar
  region       region_enum? @default(ANYWHERE)
  amount_cents Int
  in_honor_of  String?      @db.VarChar
  cause        String       @db.VarChar
  subcause     String?      @db.VarChar
  donation     donation     @relation(fields: [donation_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model donation {
  id                       String       @id @db.VarChar
  status                   status_enum?
  date                     DateTime     @db.Timestamp(6)
  donor_name               String       @db.VarChar
  email                    String       @db.VarChar
  amount_donated_cents     Int
  amount_charged_cents     Int
  line_address             String       @db.VarChar
  city                     String       @db.VarChar
  state                    String       @db.VarChar
  country                  String       @db.VarChar
  postal_code              String       @db.VarChar
  fee_charged_by_processor Int
  fees_covered_by_donor    Int
  stripe_customer_id       String?      @db.VarChar
  stripe_transfer_id       String?      @db.VarChar
  stripe_charge_id         String?      @db.VarChar
  version                  Float?
  cause                    cause[]
  distributions            distributions[]
}

model distributions {
  id                            String       @id @default(uuid())
  donation_id                   String       @db.VarChar
  amount_donated                Float?
  date                          DateTime     @db.Timestamp(6)
  status                        status_enum?
  name                          String?      @db.VarChar
  email                         String?      @db.VarChar
  desc                          String?      @db.Text
  distribution                  String?      @db.VarChar
  distribution_2                String?      @db.VarChar
  distribution_3                String?      @db.VarChar
  vision_kinship_1              Float?
  vision_kinship_2              Float?
  vision_kinship_3              Float?
  vision_kinship_4              Float?
  vision_kinship_5              Float?
  vision_kinship_6              Float?
  vision_kinship_2025           Float?
  ramadhan_india                Float?
  ramadhan_iraq                 Float?
  ramadhan_africa               Float?
  education_africa              Float?
  poverty_relief_africa         Float?
  orphan_campaign_al_anwar_iraq Float?
  imam_ridha_khums_iraq         Float?
  orphans_india                 Float?
  medical_aid_india             Float?
  housing_india                 Float?
  widows_india                  Float?
  sadaqah_india                 Float?
  education_india               Float?
  fidya_india                   Float?
  quran_india                   Float?
  khums_sadat_india             Float?
  poverty_relief_india          Float?
  arbaeen_iraq                  Float?
  donations_for_admin_payments  Float?
  donation                      donation     @relation(fields: [donation_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

